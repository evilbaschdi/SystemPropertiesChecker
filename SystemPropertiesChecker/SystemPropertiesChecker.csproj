<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net46;net48;netcoreapp3.0</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>b.ico</ApplicationIcon>
    <Version>2019.4.19.0028</Version>
    <Authors>Sebastian Walter</Authors>
    <Company>evilbaschdi</Company>
    <Copyright>Copyright © evilbaschdi 2014 - 2019</Copyright>
    <PackageProjectUrl>https://github.com/evilbaschdi/SystemPropertiesChecker</PackageProjectUrl>
    <PackageIconUrl>https://github.com/evilbaschdi/SystemPropertiesChecker/blob/master/SystemPropertiesChecker/b.ico</PackageIconUrl>
    <RepositoryUrl>https://github.com/evilbaschdi/SystemPropertiesChecker</RepositoryUrl>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="b.png" />
    <None Remove="SystemPropertiesChecker.VisualElementsManifest.xml" />
    <None Remove="b_150.png" />
    <None Remove="b_70.png" />
    <None Remove="b.ico" />
    <Content Include="b.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="SystemPropertiesChecker.VisualElementsManifest.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="b_150.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="b_70.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Resource Include="b.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ControlzEx" Version="4.0.0-alpha0232" />
    <PackageReference Include="EvilBaschdi.Core" Version="2019.3.9.1706-develop" />
    <PackageReference Include="EvilBaschdi.CoreExtended" Version="2019.3.31.1028-develop" />
    <PackageReference Include="MahApps.Metro" Version="2.0.0-alpha0262" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="3.0.0-alpha0141" />    
    <PackageReference Include="Unity" Version="5.10.3" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net46' ">
    <PackageReference Include="System.DirectoryServices" Version="4.6.0-preview4.19212.13" />
    <PackageReference Include="System.DirectoryServices.AccountManagement" Version="4.6.0-preview4.19212.13" />
    <PackageReference Include="System.Management" Version="4.6.0-preview4.19212.13" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.6.0-preview4.19212.13" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <Reference Include="mscorlib" />
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Web" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Security" />
    <Reference Include="System.Xml" />    
    <Reference Include="System.Configuration" />    
    <Reference Include="System.DirectoryServices" />    
    <Reference Include="System.DirectoryServices.AccountManagement" />
    <Reference Include="System.Management" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
</Project>
