<controls:MetroWindow x:Class="WinSPCheck.MainWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                        Title="Windows Version Checker" Width="550" Height="300"
                        WindowStartupLocation="CenterScreen" Icon="b.ico"
                        GlowBrush="{DynamicResource AccentColorBrush}"
                        ResizeMode="CanMinimize">
    <Grid>
        <TextBox Name="CurrentVersion" Margin="10" IsReadOnly="True" Background="Transparent"
                 BorderThickness="0" TextAlignment="Center" />
    </Grid>
</controls:MetroWindow>